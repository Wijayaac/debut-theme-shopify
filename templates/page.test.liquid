<style>
  /* Mobile-first CSS - Base styles for mobile */
  .container-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .custom-page-title {
    background-color: #f5f5f5;
    padding: 20px;
    text-align: center;
  }

  .custom-page-title h1 {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin: 0 0 15px 0;
  }

  .custom-page-title-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto;
    background-color: #e0e0e0;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Flexbox Row/Column System */
  .row {
    display: flex;
    flex-wrap: wrap;
    margin-left: -10px;
    margin-right: -10px;
  }
  .col-6,
  .col-12 {
    padding-left: 10px;
    padding-right: 10px;
  }
  .col-12 {
    width: 100%;
  }
  .col-6 {
    width: 50%;
  }

  /* Ensure proper stacking on mobile */
  .custom-content-block .custom-text-content {
    margin-bottom: 20px;
  }

  .custom-content-block.reverse .custom-image-placeholder {
    margin-bottom: 20px;
  }

  .custom-text-block {
    font-size: 14px;
    line-height: 1.6;
    color: #333;
    margin-bottom: 15px;
  }

  .custom-image-placeholder {
    width: 100%;
    background-color: #e0e0e0;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }

  .custom-image-placeholder svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .custom-image-placeholder.large {
    height: 200px;
  }

  .custom-image-placeholder.medium {
    height: 150px;
  }

  .custom-image-placeholder.small {
    height: 120px;
  }

  .custom-title {
    font-size: 20px;
    font-weight: bold;
    color: #333;
    margin-bottom: 15px;
  }

  .custom-button {
    background-color: #8b5cf6;
    color: #fff;
    padding: 12px 24px;
    border-radius: 6px;
    border: none;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    display: inline-block;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .custom-button:hover {
    background-color: #7c3aed;
  }

  .custom-image-grid .row {
    margin-left: -20px;
    margin-right: -20px;
  }

  .custom-email-section {
    background-color: #333;
    padding: 30px 20px;
    text-align: center;
    margin-bottom: 30px;
    border-radius: 4px;
  }

  .custom-email-section h3 {
    color: #e0e0e0;
    font-size: 18px;
    font-weight: 500;
    margin: 0 0 20px 0;
  }

  .custom-email-input-wrapper {
    position: relative;
    max-width: 400px;
    margin: 0 auto;
  }

  .custom-email-input {
    width: 100%;
    padding: 12px 50px 12px 15px;
    border: 1px solid #555;
    border-radius: 4px;
    background-color: #fff;
    font-size: 14px;
    color: #333;
  }

  .custom-email-submit {
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .custom-email-submit svg {
    width: 20px;
    height: 20px;
    color: #333;
  }

  .custom-final-section {
    position: relative;
  }

  .custom-final-image-wrapper {
    position: relative;
    margin-bottom: 20px;
  }

  .custom-final-headline {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    line-height: 1.4;
    margin-bottom: 10px;
  }

  .custom-final-headline-line {
    display: block;
  }

  .custom-final-small-image {
    width: 100%;
    max-width: 150px;
    margin-bottom: 15px;
    position: static;
  }

  .custom-final-small-image.custom-image-placeholder {
    margin-bottom: 15px;
    aspect-ratio: 1;
    height: auto;
  }

  .custom-final-small-image.custom-image-placeholder.small {
    height: auto;
    min-height: 120px;
  }

  .custom-vertical-label {
    position: absolute;
    right: 0;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    color: #8b5cf6;
    font-size: 18px;
    font-weight: bold;
    padding: 10px 5px;
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 4px;
    z-index: 10;
  }

  .text-center {
    text-align: center;
  }

  /* Tablet styles - min-width: 750px */
  @media only screen and (min-width: 750px) {
    .row {
      margin-left: -10px;
      margin-right: -10px;
    }

    .col-12,
    .col-6,
