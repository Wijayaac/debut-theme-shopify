    }

    .col-lg-3 {
      flex: 0 0 25%;
      max-width: 25%;
    }

    .custom-content-block.row {
      display: flex;
      flex-wrap: wrap;
      margin-left: -15px;
      margin-right: -15px;
      align-items: flex-start;
    }

    .row .custom-text-content,
    .row .custom-image-placeholder {
      margin-bottom: 0;
      padding-left: 15px;
      padding-right: 15px;
    }

    .row.reverse .custom-text-content {
      order: 2;
    }

    .row.reverse .custom-image-placeholder {
      order: 1;
    }

    .custom-final-image-wrapper {
      flex: 0 0 50%;
      max-width: 50%;
      padding-left: 15px;
      padding-right: 15px;
      margin-bottom: 0;
    }

    .custom-final-content {
      flex: 1;
      padding-left: 15px;
      padding-right: 15px;
    }

    .custom-final-image-wrapper .custom-image-placeholder.large {
      height: 500px;
    }

    .custom-final-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
    }

    .custom-final-small-image {
      max-width: 120px;
      margin-bottom: 20px;
      position: absolute;
      top: 0;
      right: 0;
      transform: translate(-50%, 35%);
    }

    .custom-final-small-image.custom-image-placeholder.small {
      min-height: 120px;
    }

    .custom-final-headline {
      font-size: 18px;
      margin-bottom: 15px;
    }

    .custom-vertical-label {
      position: absolute;
      right: -20px;
      top: 0;
      background-color: rgba(255, 255, 255, 0.95);
    }
  }

  /* Desktop styles - min-width: 990px */
  @media only screen and (min-width: 990px) {
    .custom-page-container .container-content {
      padding: 60px;
    }

    .custom-page-title h1 {
      font-size: 32px;
    }

    .custom-title {
      font-size: 24px;
    }

    .custom-text-block {
      font-size: 16px;
    }

    .custom-image-placeholder.large {
      height: 250px;
    }

    .custom-image-placeholder.medium {
      height: 180px;
    }

    .custom-image-placeholder.small {
      height: 150px;
    }

    .custom-final-image-wrapper .custom-image-placeholder.large {
      height: 600px;
    }

    .custom-final-small-image {
      max-width: 150px;
    }

    .custom-final-small-image.custom-image-placeholder.small {
      min-height: 150px;
    }

    .custom-final-headline {
      font-size: 20px;
    }

    .narrow-content .custom-text-content {
      max-width: 600px;
      margin: 0 auto;
    }
  }
</style>

